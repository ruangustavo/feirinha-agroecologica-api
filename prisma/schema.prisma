generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StockUnit {
  KG
  UNITY
}

model Product {
  id            String         @id @default(cuid())
  name          String
  price         Float
  description   String
  imageUrl      String
  stockUnit     StockUnit
  stockQuantity Int
  createdAt     DateTime       @default(now())
  orderProduct  OrderProduct[]
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELED
}

enum OrderPaymentMethod {
  PIX
  MONEY
}

model OrderProduct {
  id String @id @default(cuid())

  product   Product @relation(fields: [productId], references: [id])
  productId String
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String

  createdAt DateTime @default(now())
}

model Order {
  id String @id @default(cuid())

  // Address related
  postalCode     String
  address        String
  referencePoint String
  addressNumber  String
  neighborhood   String

  // User related
  email       String
  phoneNumber String

  // Product related
  total         Decimal
  status        OrderStatus        @default(PENDING)
  paymentMethod OrderPaymentMethod

  createdAt    DateTime       @default(now())
  orderProduct OrderProduct[]
}
